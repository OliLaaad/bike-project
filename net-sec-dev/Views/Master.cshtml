    <link rel="stylesheet" href="~/css/bootstrap.min.css">   
    <link rel="stylesheet" href="~/css/bootstrap-theme.css">
    <link rel="stylesheet" href="~/css/main.css">
    <meta name="keywords" content="Business Bike Cargo Sustainable Transport List Cycling Cities" />
</head>
<body>  
    <img alt="Background image of a bike" class="backgroundImage" src="@image"/>
    <div class="main">
