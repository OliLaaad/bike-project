@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;

    string image = "";

    if (OliBase.Helpers.HasValue(CurrentPage.image))
    {
        
        image = Umbraco.Media(CurrentPage.image).url;
    }
}
<!doctype html>
<html id="html" lang="" style="background-image:url(@image);">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Business On A Bike</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="@Umbraco.Media("1085").url">
    <link rel="icon" type="image/gif" src="@Umbraco.Media("1085").url" />
    <link href='//fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>
    <link rel="apple-touch-icon" href="apple-touch-icon.png">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">   
    <link rel="stylesheet" href="~/css/bootstrap-theme.css">
    <link rel="stylesheet" href="~/css/main.css">
</head>
<body>  
    <div class="main">
        @RenderBody()
    </div>
    <footer></footer>
    <script src="~/scripts/masonry.js"></script>
    <script src="~/scripts/main.js"></script>
</body>
</html>

